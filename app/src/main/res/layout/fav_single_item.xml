<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp">
    <LinearLayout
        android:id="@+id/fav_item_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#D2B4DE"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/fav_item_img"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:padding="5dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_foodfie_logo" />

        <TextView
            android:id="@+id/fav_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:layout_margin="5dp"
            android:text="Name"
            android:textSize="20sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/fav_item_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:text="ID"
            android:textSize="20sp" />
        <TextView
            android:id="@+id/fav_item_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:text="Price"
            android:textSize="20sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/fav_item_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:textColor="@color/white"
            android:text="rating"
            android:textSize="20sp"
            android:textStyle="bold" />

    </LinearLayout>


</androidx.cardview.widget.CardView>